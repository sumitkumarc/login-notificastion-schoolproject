<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/image_3"
    android:orientation="vertical"
    tools:context="Studentlogin.Fragment.LoginFragment">
    <!--<com.flaviofaria.kenburnsview.KenBurnsView-->
    <!--android:id="@+id/fragmentloginKenBurnsView1"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:src="@drawable/image_3" />-->

    <View
        android:id="@+id/fragmentloginView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#000000" />


        <ImageView
            android:id="@+id/fragmentloginLogo"
            android:layout_centerHorizontal="true"
            android:alpha="0"
            android:src="@drawable/icon"
            app:layout_heightPercent="70%"
            app:layout_widthPercent="60%" />




    <LinearLayout
        android:id="@+id/form_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_marginTopPercent="50%">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_marginBottom="20dp"
            android:text="Student Login"
            android:textColor="@android:color/white" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mainImageView1"
                android:layout_width="@dimen/login_holder_height"
                android:layout_height="@dimen/login_holder_height"
                android:src="@drawable/user_icon"
                android:tint="#ffffff" />

            <EditText
                android:id="@+id/mainEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mainImageView1"
                android:layout_alignTop="@id/mainImageView1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mainImageView1"
                android:background="@null"
                android:ems="10"
                android:hint="Mobile No"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                android:typeface="serif" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_bg"
            android:padding="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/mainImageView2"
                android:layout_width="@dimen/login_holder_height"
                android:layout_height="@dimen/login_holder_height"
                android:src="@drawable/password_icon"
                android:tint="#ffffff" />

            <EditText
                android:id="@+id/mainEditText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/mainImageView2"
                android:layout_alignTop="@id/mainImageView2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mainImageView2"
                android:background="@null"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="20sp"
                android:typeface="serif" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/label_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:alpha="0"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Skyzone Group"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#cccccc"
            android:typeface="serif" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_login_button"
        app:layout_marginTopPercent="75%">

        <TextView
            android:id="@+id/button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="LOGIN"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/button_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:src="@mipmap/ic_launcher" />

        <ProgressBar
            android:id="@+id/mainProgressBar1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:alpha="0" />

    </RelativeLayout>
</android.support.percent.PercentRelativeLayout>